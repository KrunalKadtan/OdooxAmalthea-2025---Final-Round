# WorkZen HRMS - Environment Configuration
# Copy this file to .env and update with your values

# ============================================
# Django Settings
# ============================================
SECRET_KEY=django-insecure-workzen-hrms-change-this-in-production-key
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# ============================================
# PostgreSQL Database (Required)
# ============================================
DB_NAME=workzen_db
DB_USER=workzen_user
DB_PASSWORD=WorkZen@2025
DB_HOST=localhost
DB_PORT=5432

# ============================================
# JWT Authentication (Required)
# ============================================
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production
JWT_EXPIRY_HOURS=24

# ============================================
# CORS Settings (Required for Frontend)
# ============================================
# Frontend runs on port 3001 (Vite default in vite.config.js)
CORS_ALLOWED_ORIGINS=http://localhost:3001

# ============================================
# Supabase Cloud Backup (Optional)
# ============================================
# Leave empty if not using Supabase
SUPABASE_HOST=
SUPABASE_PASSWORD=
SUPABASE_DB=postgres

# ============================================
# Redis for Celery (Optional)
# ============================================
# Leave as default if not using Celery
REDIS_HOST=localhost
REDIS_PORT=6379

# ============================================
# Notes
# ============================================
# 1. Never commit .env to version control
# 2. Change SECRET_KEY and JWT_SECRET_KEY in production
# 3. Use strong passwords for production
# 4. Set DEBUG=False in production
